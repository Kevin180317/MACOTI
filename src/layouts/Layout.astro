---
import "@styles/global.css";

import Navbar from "@components/Navbar";
import { ClientRouter } from "astro:transitions";

const { title, description, keywords } = Astro.props;

const LANG = Astro.url.pathname.startsWith("/en/");

const URL = Astro.url.pathname;
---

<!doctype html>
<html lang={LANG ? "en" : "es"}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/logo.ico" />
    <meta name="generator" content={Astro.generator} />
    <meta
      name="description"
      content="En MACOTI ofrecemos servicios integrales de maquinado CNC de 3 a 5 ejes, maquinaria convencional y mantenimiento de herramientas. Soluciones confiables y a tiempo para las industrias médica, aeroespacial, automotriz y más."
    />
    <meta
      name="keywords"
      content="maquinado CNC, maquinaria CNC, maquinado de precisión, manufactura industrial, maquinado 5 ejes, ingeniería industrial, mantenimiento de herramientas, maquinado para industria médica, maquinado aeroespacial, componentes metálicos, fabricación de piezas, soluciones industriales, servicios de maquinado"
    />
    <title>MACOTI | Maquinado CNC de Alta Precisión para Industrias</title>
    <link rel="canonical" href={URL} />
    <meta name="robots" content="index, follow" />
    <meta name="author" content="Macoti " />
    <meta name="publisher" content="Macoti" />
    <ClientRouter />
  </head>
  <body class="overflow-x-hidden">
    <Navbar client:only="react" />
    <slot />
  </body>
</html>

<style is:global>
  /* Optimización de fuentes */
  @font-face {
    font-family: "Tgaqsapro";
    src: url("/fonts/Fontspring-DEMO-tgaqsapro-black.otf") format("opentype");
    font-weight: 900;
    font-style: normal;
    unicode-range: U+0000-0025, U+0027, U+002A-002C, U+002E-002F, U+0030-0033,
      U+0035-003F, U+0041-FFFF; /* Excluye &, (, -, ), 4 y @ */
  }
  @font-face {
    font-family: "Tgaqsapro";
    src: url("/fonts/Fontspring-DEMO-tgaqsapro-bold.otf") format("opentype");
    font-weight: 700;
    font-style: normal;
    unicode-range: U+0000-0025, U+0027, U+002A-002C, U+002E-002F, U+0030-0033,
      U+0035-003F, U+0041-FFFF; /* Excluye &, (, -, ), 4 y @ */
  }
  @font-face {
    font-family: "Tgaqsapro";
    src: url("/fonts/Fontspring-DEMO-tgaqsapro-light.otf") format("opentype");
    font-weight: 300;
    font-style: normal;
    unicode-range: U+0000-0025, U+0027, U+002A-002C, U+002E-002F, U+0030-0033,
      U+0035-003F, U+0041-FFFF; /* Excluye &, (, -, ), 4 y @ */
  }
  @font-face {
    font-family: "Tgaqsapro";
    src: url("/fonts/Fontspring-DEMO-tgaqsapro-medium.otf") format("opentype");
    font-weight: 500;
    font-style: normal;
    unicode-range: U+0000-0025, U+0027, U+002A-002C, U+002E-002F, U+0030-0033,
      U+0035-003F, U+0041-FFFF; /* Excluye &, (, -, ), 4 y @ */
  }
  @font-face {
    font-family: "Tgaqsapro";
    src: url("/fonts/Fontspring-DEMO-tgaqsapro-regular.otf") format("opentype");
    font-weight: 400;
    font-style: normal;
    unicode-range: U+0000-0025, U+0027, U+002A-002C, U+002E-002F, U+0030-0033,
      U+0035-003F, U+0041-FFFF; /* Excluye &, (, -, ), 4 y @ */
  }
  @font-face {
    font-family: "Tgaqsapro";
    src: url("/fonts/Fontspring-DEMO-tgaqsapro-ultrablack.otf")
      format("opentype");
    font-weight: 950;
    font-style: normal;
    unicode-range: U+0000-0025, U+0027, U+002A-002C, U+002E-002F, U+0030-0033,
      U+0035-003F, U+0041-FFFF; /* Excluye &, (, -, ), 4 y @ */
  }

  /* Estilos globales */
  html {
    scroll-behavior: smooth;
  }

  body {
    font-family: "Tgaqsapro", sans-serif;
    font-weight: 400;
  }

  .exclamation {
    font-family: sans-serif;
  }
</style>
