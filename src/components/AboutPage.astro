---
import { getLangFromUrl, useTranslations } from "@i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const elementos = [
  {
    titulo: t("aboutus.mission"),
    descripcion: t("aboutus.mission.text"),
  },
  {
    titulo: t("aboutus.vision"),
    descripcion: t("aboutus.vision.text"),
  },
  {
    titulo: t("aboutus.values."),
    descripcion: {
      V1: {
        Titulo: t("aboutus.values.title1"),
        Texto: t("aboutus.values.text1"),
      },
      V2: {
        Titulo: t("aboutus.values.title2"),
        Texto: t("aboutus.values.text2"),
      },
      V3: {
        Titulo: t("aboutus.values.title3"),
        Texto: t("aboutus.values.text3"),
      },
      V4: {
        Titulo: t("aboutus.values.title4"),
        Texto: t("aboutus.values.text4"),
      },
      V5: {
        Titulo: t("aboutus.values.title5"),
        Texto: t("aboutus.values.text5"),
      },
      V6: {
        Titulo: t("aboutus.values.title6"),
        Texto: t("aboutus.values.text6"),
      }
    },
  },
];
---

<main class="px-6 py-12">
  <h1 class="text-3xl font-bold text-center mb-8">{t("aboutus.title")}</h1>
  <div
    class="grid grid-cols-1 sm:grid-cols-2 gap-x-12 gap-y-8 container mx-auto"
  >
    {
      elementos.map((item) => (
        <div class="bg-white shadow-md rounded-lg p-6">
          <h2 class="text-xl font-semibold mb-4">{item.titulo}</h2>
          {typeof item.descripcion === "string" ? (
            <p class="text-gray-600">{item.descripcion}</p>
          ) : (
            <ul class="list-disc list-inside text-gray-600 space-y-2">
              {Object.values(item.descripcion).map((valor) => (
                <li class="font-bold">{valor.Titulo}</li>
                <p class="ml-6">{valor.Texto}</p>
              ))}
            </ul>
          )}
        </div>
      ))
    }
  </div>
</main>
