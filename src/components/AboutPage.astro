const elementos = [
  {
    titulo: "Misión",
    descripcion:
      "Lorem ipsum dolor sit amet consectetur adipisicing elit. Officia placeat enim ducimus est libero. Dolor architecto, hic enim error exercitationem aperiam odio commodi impedit dignissimos blanditiis maiores mollitia quia tempora ipsa placeat, iste, vel non.",
  },
  {
    titulo: "Visión",
    descripcion:
      "Lorem ipsum dolor sit amet consectetur adipisicing elit. Officia placeat enim ducimus est libero. Dolor architecto, hic enim error exercitationem aperiam odio commodi impedit dignissimos blanditiis maiores mollitia quia tempora ipsa placeat, iste, vel non.",
  },
  {
    titulo: "Valores",
    descripcion: {
      V1: "Lorem ipsum, dolor sit amet consectetur adipisicing elit. Ut, deserunt!",
      V2: "Lorem ipsum dolor sit amet consectetur adipisicing elit. Illum quo at enim voluptatem?",
