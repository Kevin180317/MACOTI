---
import { FaFacebookF } from "react-icons/fa";
import { FaLinkedinIn } from "react-icons/fa";

const isEn = Astro.url.pathname.startsWith("/en/");
---

<footer class="pt-8">
  <div class="container mx-auto px-4">
    <hr class="mb-8" />
  </div>
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-4 gap-8 mb-8">
      <div>
        <h3 class="font-semibold mb-4 text-3xl">
          {isEn ? "About Us" : "Sobre nosotros"}
        </h3>
        <div class="space-y-2 flex flex-col">
          <p class="text-gray-600">
            {
              isEn
                ? "In MACOTI we have extensive experience in the metal-mechanic industry, with participation in medical, aerospace and automotive areas. "
                : "En MACOTI Contamos con amplia experiencia en la industria metalmecánica, con participación en áreas médicas, aeroespacial y automotriz."
            }
            <br />{
              isEn ? "We are at your service:" : "Nos ponemos a sus órdenes:"
            }
          </p>
          <a
            href="tel:+526643748031"
            target="_blank"
            class="text-[#f79428] hover:underline">6643748031</a
          >
          <a
            href="mailto:MACOTI.Ricardo@gmail.com"
            target="_blank"
            class="text-[#f79428] hover:underline">MACOTI.Ricardo@gmail.com</a
          >
        </div>
      </div>

      <div>
        <h3 class="font-semibold mb-4 text-3xl">
          {isEn ? "Features" : "Funciones"}
        </h3>
        <ul class="space-y-2 text-gray-600">
          <li>
            <a href={isEn ? "/en/" : "/"} class="hover:text-[#f79428]"
              >{isEn ? "Home" : "Inicio"}</a
            >
          </li>
          <li>
            <a
              href={isEn ? "/en/acerca-de/" : "/acerca-de/"}
              class="hover:text-[#f79428]">{isEn ? "About Us" : "Acerca de"}</a
            >
          </li>
          <li>
            <a
              href={isEn ? "/en/proyectos/" : "/proyectos/"}
              class="hover:text-[#f79428]">{isEn ? "Projects" : "Proyectos"}</a
            >
          </li>
          <li>
            <a
              href={isEn ? "/en/servicios/" : "/servicios/"}
              class="hover:text-[#f79428]">{isEn ? "Services" : "Servicios"}</a
            >
          </li>
          <li>
            <a
              href={isEn ? "/en/contacto/" : "/contacto/"}
              class="hover:text-[#f79428]">{isEn ? "Contact" : "Contacto"}</a
            >
          </li>
        </ul>
      </div>

      <div>
        <h3 class="font-semibold mb-4 text-3xl">
          {isEn ? "Follow Us" : "Síguenos en"}
        </h3>
        <ul class="space-y-2 text-gray-600">
          <li class="flex items-center space-x-2">
            <div class="bg-[#1877F2] p-2 rounded-full">
              <FaFacebookF className="text-white" />
            </div>
            <a
              href="https://www.facebook.com/MaquinadoComputarizadoTijuana/?locale=es_LA"
              target="_blank"
              class="hover:text-[#1877F2]">Facebook</a
            >
          </li>
          <li class="flex items-center space-x-2">
            <div class="bg-[#0A66C2] p-2 rounded-full">
              <FaLinkedinIn className="text-white" />
            </div>
            <a
              href="https://mx.linkedin.com/company/maquinado-computarizado-tijuana"
              target="_blank"
              class="hover:text-[#0A66C2]">LinkedIn</a
            >
          </li>
        </ul>
      </div>

      <div>
        <h3 class="font-semibold mb-4 text-3xl">
          {isEn ? "Useful Links" : "Enlaces de interés"}
        </h3>
        <ul class="space-y-2 text-gray-600">
          <li>
            <a
              href={isEn
                ? "/en/politica-de-servicio/"
                : "/politica-de-servicio/"}
              class="hover:text-[#f79428]"
              >{isEn ? "Service Policy" : "Política de Servicio"}
            </a>
          </li>
          <li>
            <a
              href={isEn
                ? "/en/terminos-y-condiciones/"
                : "/terminos-y-condiciones/"}
              class="hover:text-[#f79428]"
              >{isEn ? "Terms and Conditions" : "Términos y Condiciones"}
            </a>
          </li>
        </ul>
      </div>
    </div>

    <div class="border-t-2 border-black pt-4 pb-4 text-center text-gray-600">
      &copy; {new Date().getFullYear()}
      {
        isEn
          ? "MACOTI. All rights reserved."
          : "MACOTI. Todos los derechos reservados."
      }
    </div>
  </div>
</footer>
