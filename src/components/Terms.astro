---
const isEn = Astro.url.pathname.startsWith("/en/");

const elementos = [
  {
    id: 1,
    titulo: isEn ? "Use of Services" : "Uso de los Servicios",
    descripcion: isEn
      ? "By using MACOTI's services, you agree to comply with all applicable laws and regulations. Unauthorized use of our machinery or intellectual property is prohibited."
      : "Al utilizar los servicios de MACOTI, usted acepta cumplir con todas las leyes y regulaciones aplicables. Queda prohibido el uso no autorizado de nuestra maquinaria o propiedad intelectual.",
  },
  {
    id: 2,
    titulo: isEn ? "Project Specifications" : "Especificaciones del Proyecto",
    descripcion: isEn
      ? "Clients must provide clear and detailed project specifications. MACOTI is not responsible for errors caused by incomplete or inaccurate information provided by the client."
      : "Los clientes deben proporcionar especificaciones claras y detalladas del proyecto. MACOTI no se responsabiliza por errores causados por información incompleta o inexacta proporcionada por el cliente.",
  },
  {
    id: 3,
    titulo: isEn ? "Liability Limitations" : "Limitaciones de Responsabilidad",
    descripcion: isEn
      ? "MACOTI is not liable for indirect damages or losses resulting from project delays or modifications requested after project approval."
      : "MACOTI no se hace responsable de daños o pérdidas indirectas resultantes de retrasos en el proyecto o modificaciones solicitadas después de la aprobación del mismo.",
  },
];
---

<main class="px-6 py-12 gap-8 container mx-auto">
  <h1 class="text-3xl font-bold mb-8">
    {isEn ? "Terms and Conditions" : "Términos y Condiciones"}
  </h1>
  <p class="text-gray-700 mb-8 text-lg">
    {
      isEn
        ? "Welcome to MACOTI. By accessing our services, you agree to the following terms and conditions designed to ensure clear communication and quality service."
        : "Bienvenido a MACOTI. Al acceder a nuestros servicios, usted acepta los siguientes términos y condiciones diseñados para asegurar una comunicación clara y un servicio de calidad."
    }
  </p>
  <div class="flex flex-col gap-8">
    {
      elementos.map((item) => (
        <section>
          <h2 class="text-xl font-semibold mb-4">
            {item.id}. {item.titulo}
          </h2>
          <p class="text-gray-600">{item.descripcion}</p>
        </section>
      ))
    }
  </div>
</main>
