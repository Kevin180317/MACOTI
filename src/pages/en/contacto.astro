---
import Layout from "@layouts/Layout.astro";
import Footer from "@components/Footer.astro";
import { FaPhoneAlt, FaEnvelope } from "react-icons/fa";
const isEn = Astro.url.pathname.startsWith("/en/");
---

<Layout
  title="MACOTI | Contacto"
  description="Macoti ayuda a realizar tus proyectos"
  keywords="Macoti, Maquinado, Especializado"
>
  <main class="container mx-auto px-8 mt-32">
    <h1 class="text-3xl font-bold text-start uppercase text-gray-800">
      {
        isEn
          ? "At MACOTI we have extensive experience in the metal-mechanical industry."
          : "En MACOTI contamos con amplia experiencia en la industria metalmecánica"
      }
    </h1>
    <div class="w-full flex justify-center mt-8">
      <iframe
        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3366.4744184533497!2d-116.9198451!3d32.460000199999996!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x80d939cc93999acb%3A0x57173c2bf3ba3508!2sMACOTI!5e0!3m2!1ses!2smx!4v1746898121287!5m2!1ses!2smx"
        width="100%"
        height="450"
        style="border:0;"
        allowfullscreen=""
        loading="lazy"
        referrerpolicy="no-referrer-when-downgrade"
        class="rounded-lg shadow-lg"></iframe>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mt-12">
      <div>
        <h2 class="text-2xl font-semibold text-gray-800">
          {isEn ? "Participation areas" : "Áreas de participación"}
        </h2>
        <p class="mt-4 text-gray-600">
          {
            isEn
              ? "We have experience in medical, aerospace and automotive areas."
              : "Contamos con experiencia en áreas médicas, aeroespacial y automotriz."
          }
        </p>
        <p class="mt-2 text-gray-600">
          {
            isEn
              ? "We are at your service for any inquiry or project."
              : "Nos ponemos a sus órdenes para cualquier consulta o proyecto."
          }
        </p>
      </div>
      <div>
        <h2 class="text-2xl font-semibold text-gray-800">
          {isEn ? "Our Office" : "Nuestra Oficina"}
          <p class="mt-4 text-gray-600 flex items-center">
            <FaPhoneAlt className="mr-2 text-blue-500" />
            <a href="tel:6643748031" class="text-blue-500 hover:underline"
              >6643748031</a
            >
          </p>
          <p class="mt-2 text-gray-600 flex items-center">
            <FaEnvelope className="mr-2 text-blue-500" />
            <a
              href="mailto:MACOTI.Ricardo@gmail.com"
              class="text-blue-500 hover:underline">MACOTI.Ricardo@gmail.com</a
            >
          </p>
        </h2>
      </div>
    </div>
    <Footer />
  </main>
</Layout>
